  <title>Home Tasks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="/css/sleepData.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="col-sm-4 lightsClass">
      <h2>Lights</h2>
      <table class="table table-bordered table-striped table-sm" id="lightsTable">
        <thead>
          <tr>
            <th>Light</th>
            <th>Switch</th>
          </tr>
        </thead>
        <tbody>
          {{#each lights}}
          <tr>
            <td>{{name}}</td>
            <td>
              <label class="switch">
                <input type="checkbox" checked>
                <div class="slider"></div>
              </label>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <h2>Temperature</h2>
      <form>
        <input type="number" name="points" min="50" max="80" value="70">
      </form>
    </div>
  </div>

  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
