<script type="text/javascript">
window.onload = function () {
  new CanvasJS.Chart("chartContainer",
  {
    title:{text: "Community Data"},
    axisX: {title: "Time",},
    axisY: {title: "Quality", interval: 25},
    data: [
    {
      type: "area",
      dataPoints: [
      {{#each communitydata}}
      { x: new Date( {{year}}, {{month}}, {{day}} ), y: {{y}} },
      {{/each}}
      ]
    }
    ]
  }).render();
}

</script>

<body>
  <div class="container">
    <h2>Global Data</h2>
    <div id="chartContainer" style="height: 400px; width: 100%;"></div>

    <div class="form-group">
      <label for="comment">Do you see any interesting trends in this data?</label>
      <textarea class="form-control" rows="3" id="answerGlobal"></textarea>
    </div>
    <div class="form-group">
      <label for="comment">Additional Comments:</label>
      <textarea class="form-control" rows="2" id="commentsGlobal"></textarea>
    </div>
    <div class="alert alert-success alert-dismissible fade in" role="alert" id="alertGlobal">
      <button type="button" class="close" data-hide="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      Thank you for contributing to the scientific effort!
    </div>
    <button type="button" id="submitGlobal" class="btn btn-primary">Submit</button>

      <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
      <script src="https://code.jquery.com/jquery.js"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
