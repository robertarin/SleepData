<!DOCTYPE html>
<html>
  <head>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 
          </button>
          <a class="navbar-brand" href="/personal">SleepData</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li> <a href="/personal">Personal</a> </li>
            <li> <a href="/tasks">Home Tasks</a> </li>
            <li> <a href="/community">Community</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/jquery.canvasjs.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/personal.js"></script>

    <title>Personal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div class="page-header">
      <h1>Personal</h1>
    </div>

    <script type="text/javascript">
        window.onload = function () {
          var chart = new CanvasJS.Chart("chartContainer",
          {

            title:{
              text: "Sleep Quality"
            },
            axisX: {
              title: "Time",
              interval: 10
            },
            axisY: {
              title: "Quality",
              interval: 25
            },
            data: [
            {
              type: "area",
              dataPoints: [
                {{#each personaldata}}
                  { x: new Date( {{year}}, {{month}}, {{day}} ), y: {{y}} },
                {{/each}}
              ]
            }
            ]

          });
          chart.render();
        }
    </script>
  </head>

  <body>
	<div class="container">
    <div id="chartContainer" style="height: 400px; width: 100%;">
  </div>

	<h1>Alarms</h1>
  <u1 class="alarms" id = "alarms">
    {{#each alarms}}
      <li>
        <p>{{name}}: {{time}}</p>
        <input type="checkbox" checked>
      </li>
    {{/each}}
  </u1>
  <form class="form-inline">
    <div class="form-group">
      <label class="sr-only" for="nameInput">Alarm name</label>
      <input type="text" class="form-control" id="nameInput" placeholder="Enter alarm name">
    </div>
    <div class="form-group">
      <label class="sr-only" for="timeInput">Time</label>
      <input type="time" class="form-control" id="timeInput" placeholder="Enter alarm time">
    </div>
    <button type="submit" id="newAlarmBtn" class="btn btn-primary">New alarm</button>
</form>

<table class="table table-bordered table-striped table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Alarm</th>
      <th>Time</th>
      <th>Enabled</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Class</td>
      <td>9:00am</td>
      <td>
        <label class="switch">
          <input type="checkbox" checked>
          <div class="slider"></div>
        </label>
      </td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Gym</td>
      <td>11:00am</td>
      <td>
        <label class="switch">
          <input type="checkbox" checked>
          <div class="slider"></div>
        </label>
      </td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Work</td>
      <td>2:30pm</td>
      <td>
        <label class="switch">
          <input type="checkbox" checked>
          <div class="slider"></div>
        </label>
      </td>
    </tr>
  </tbody>
</table>

<p></p>
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/sleepData.css" rel="stylesheet">
  </body>
</html>
