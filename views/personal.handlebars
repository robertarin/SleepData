    <title>Personal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/sleepData.css" rel="stylesheet">

  </head>
  <body>
	<!-- this is a comment in HTML -->
	<div class="container">

    <div class="jumbotron">
        <h1>Your data</h1>
        <img src="images/pie.jpg" alt="Pie chart1" class="img">
    </div>

		<div class="jumbotron">
  			<h1>Alarms</h1>
        <u1 class="alarms" id = "alarms">
          {{#each alarms}}
            <li>
                <p>{{name}}: {{time}}</p>
                <label class="switch">
                  <input type="checkbox">
                  <div class="slider"></div>
                </label>
            </li>
          {{/each}}
        </u1>
        <!-- Trigger/Open The Modal -->
        <button id="newAlarmBtn">New Alarm</button>
        <!-- The Modal -->
        <div id="alarmModal" class="modal">
          <!-- Modal content -->
          <div class="modal-content">
            <div class="modal-header">
              <span class="close">&times</span>
              <h2>New Alarm</h2>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" class="form-control" id="nameField">
                </div>
                <div class="form-group">
                  <label for="time">Time:</label>
                  <input type="text" class="form-control" id="timeField">
                </div>
                <button id="subBtn" type="submit" class="btn btn-default">Submit</button>
              </form>
            </div>
          </div>
        </div>
  	</div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/alarmModalScript.js"></script>
    <script src="/js/page.js"></script>

  </body>
